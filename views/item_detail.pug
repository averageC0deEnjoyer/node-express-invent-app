extends layout

block content

  h1 Item: #{title}

  div(style='margin-left:20px;margin-top:20px')

    h4 Item
    p= item.name
    h5 Category
    dl
      each category in item.category
        dt
          a(href=category.url) #{category.name}
    p Price: #{item.price}
    p Stock: #{item.stock}

    
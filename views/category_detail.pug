extends layout

block content

  h1 #{title}

  h2= category.name

  |  (#{category.desc})

  div(style='margin-left:20px;margin-top:20px')

    h4 Items

    dl
      each item in items
        dt
          a(href=item.url) #{item.name}
        dd #{item.desc}

      else
        p This category has no items

  hr
  p
    a(href=category.url+'/delete') Delete category
  hr
  p
    a(href=category.url+'/update') Update category


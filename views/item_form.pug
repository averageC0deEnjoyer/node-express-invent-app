extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='desc') Description:
      input#name.form-control(type='text', placeholder='description of the item' name='desc' required='true' value=(undefined===item ? '' : item.desc) )
    div.form-group
      label Category: 
      div 
        for category in allCategories 
            div(style='display:inline; padding-right:10px')
                input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id checked=category.checked)
                label(for=category._id) #{category.name}
    div.form-group
      label(for='price') Price:
      textarea#price.form-control(type='number', placeholder='Input price here' name='price' required='true') #{undefined===item ? '' : item.price}
    div.form-group
      label(for='stock') Stock:
      input#stock.form-control(type='number', placeholder='0' name='stock' value=(undefined===item ? '' : item.stock))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

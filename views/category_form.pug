extends layout

block content

  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', placeholder='Electronics, Foods, etc.' name='name' required='true' value=(undefined===category ? '' : category.name) )
      label(for='name') Category Desc:
      input#name.form-control(type='text', placeholder='category description' name='desc' value=(undefined===category ? '' : category.desc) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg